sible\nimplications for holography.\n","versions":[{"version":"v1","created":"Thu, 14 Mar 2019 17:54:41 GMT"},{"version":"v2","created":"Wed, 21 Aug 2019 17:17:33 GMT"},{"version":"v3","created":"Wed, 21 Jul 2021 04:36:47 GMT"}],"update_date":"2021-09-15"}
