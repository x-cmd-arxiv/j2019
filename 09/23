ower efficient\nimage acquisition pipelines.\n","versions":[{"version":"v1","created":"Mon, 23 Sep 2019 03:04:19 GMT"},{"version":"v2","created":"Fri, 15 Nov 2019 23:57:27 GMT"}],"update_date":"2019-11-19"}
