g the\nBH mass spectrum.\n","versions":[{"version":"v1","created":"Tue, 3 Sep 2019 18:00:15 GMT"},{"version":"v2","created":"Sun, 17 Nov 2019 14:08:29 GMT"},{"version":"v3","created":"Thu, 19 Mar 2020 16:27:59 GMT"}],"update_date":"2020-03-20"}
