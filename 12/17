forming galaxies.\n","versions":[{"version":"v1","created":"Mon, 16 Dec 2019 19:00:00 GMT"},{"version":"v2","created":"Tue, 21 Jan 2020 10:21:39 GMT"}],"update_date":"2020-03-11"}
