archical reserving model.\n","versions":[{"version":"v1","created":"Mon, 28 Oct 2019 14:08:53 GMT"},{"version":"v2","created":"Thu, 2 Jul 2020 18:14:26 GMT"},{"version":"v3","created":"Fri, 19 Nov 2021 14:34:16 GMT"}],"update_date":"2021-11-22"}
